# ====================================
# API Keys (Required)
# ====================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-embedding-001

# Gemini Embedding Configuration
# True: Gemini for long text, local for short fields (recommended)
# False: Use Gemini for all text fields (higher cost, better quality)
USE_HYBRID_EMBEDDINGS=False

# ====================================
# Qdrant Vector Database (Required)
# ====================================

# Qdrant Cloud Configuration
# Get your cluster from: https://cloud.qdrant.io/
# Format: https://<cluster-id>.qdrant.tech
# Or use http://localhost:6333 for local development
QDRANT_URL=your_qdrant_url_here
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=applicants_production

# Local Qdrant Storage (Optional - for local development)
QDRANT_STORAGE_PATH=./qdrant_storage

# ====================================
# MongoDB Configuration (Optional)
# ====================================

# MongoDB Atlas Configuration
# Get your cluster from: https://cloud.mongodb.com/
MONGODB_HOST=your_mongodb_host_here
MONGODB_DATABASE=resume_database
MONGODB_COLLECTION=resumes
MONGODB_CLUSTER_NAME=Cluster0
MONGODB_PROJECT_ID=your_project_id_here
MONGODB_API_PUBLIC_KEY=your_api_public_key_here
MONGODB_API_PRIVATE_KEY=your_api_private_key_here
MONGODB_USERNAME=your_mongodb_username_here
MONGODB_PASSWORD=your_mongodb_password_here

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
